<style>.modal-fog {
   background: rgba(30, 30, 30, 0.5);
   position: fixed;
   top: 0;
   left: 0;
   bottom: 0;
   right: 0;
   }
   .modal-frame {
   position: absolute;
   top: 8%;
   left: 35%;
   border: 1px solid #31561B;
   background: #ddd;
   height: 75%;
   width: 30%;
   box-shadow: 10px 10px 22px -6px rgba(71, 206, 51, 0.8);
   }
   .modal-title {
   position: absolute;
   top: 0;
   width: 100%;
   height:30px;
   text-align: center;
   border-bottom: 1px solid #39AA56;
   font-size: 21px;
   color: #39AA56;
   font-weight: 700;
   }
   .modal-body {
   margin-top: 40px;
   padding: 5px;
   text-align: left;
   }
   ul input[type="text"] {
   width: auto;
   }
   button[disabled], html input[disabled] {
   font-size: 97%;
   text-align: center;
   color: red;
   background-color: #C5CFC5;
   }
   ul {
   display: block;
   list-style-type: none;
   margin-top: 1em;
   margin-bottom: 1 em;
   margin-left: 0;
   margin-right: 0;
   padding-left: 40px;
   }
   li span {
   font-weight: 500;
   }
   .pad{
   padding-bottom: 1%;
   padding-top: 1%;
   }
   a:hover, a:focus {
   color: #0027FF;
   }
</style>
{{#meg-layout layoutName="layouts/simple"}}
{{#if redirected}}
{{/if}}
<div id="landing" class="landing">
   <div class="row hero z-1">
      <div class="landing-centered-wrapper">
         <div class="large-12 columns" id="hero-copy">
            <h2>Select Region</h2>
            <section>
               <div class="landing-centered-wrapper">
                  {{input valueBinding="name" id="name" label="Name" placeholder="Hit the PopUp button.!!" type="text" disabled="disabled"}}
                  <button class="button" {{action 'popup'}}>PopUp Box</button>
                  <button class="button" {{action 'stepThree'}}>Step 3</button>
               </div>
            </section>
            {{#if enabled}}
            <span>
               {{#simple-modal enabled=true title="Add Region"}}
               <ul>
                  <li class="pad"><span>Region Name:</span>&nbsp;&nbsp;&nbsp;
                     {{input valueBinding="print" label="print" placeholder="Enter region." type="text" style="text-align: center; color: red;"}}
                  </li>
                  <li class="pad"><span>Flag Icon:</span>&nbsp;&nbsp;&nbsp;<a style="color: #0027FF;" href="">www.megam.io</a></li>
                  <li class="pad"><span>Custom Flavors:</span>&nbsp;&nbsp;&nbsp;✕/✓</li>
                  <li class="pad">
                     <table style="width:100%">
                        <tr>
                           <td><span>Flavors:</span></td>
                           <td></td>
                           <td>
                              <a href="#" data-toggle="tooltip" title="Add"  >
                              <button type="button" class="btn btn-default" aria-label="Left Align">
                              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                              </button>
                              </a>
                           </td>
                        </tr>
                        <tr>
                           <td><span style="color: #639352;">Compute:</span></td>
                           <td><span style="color: #639352;">Storage:</span></td>
                           <td></td>
                        </tr>
                        <tr>
                           <td>2GB/1Core</td>
                           <td>40GB</td>
                           <td>
                              <span>
                              <a href="#" data-toggle="tooltip" title="Edit">
                              <button type="button" class="btn btn-default" aria-label="Left Align">
                              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                              </button>
                              </a>
                              </span>
                              <span>
                              <a href="#" data-toggle="tooltip" title="Delete">
                              <button type="button" class="btn btn-default" aria-label="Left Align">
                              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                              </button>
                              </a>
                              </span>
                           </td>
                        </tr>
                        <tr>
                           <td>4GB/2Core</td>
                           <td>40GB</td>
                           <td>
                              <span>
                              <a href="#" data-toggle="tooltip" title="Edit" >
                              <button type="button" class="btn btn-default" aria-label="Left Align">
                              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                              </button>
                              </a>
                              </span>
                              <span>
                              <a href="#" data-toggle="tooltip" title="Delete">
                              <button type="button" class="btn btn-default" aria-label="Left Align">
                              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                              </button>
                              </a>
                              </span>
                           </td>
                        </tr>
                     </table>
                  </li>
                  <li class="pad">
                     <span>Cost:</span>
                     <tr>
                        <span style="color: #639352;">Compute:</span>&nbsp;
                        {{input valueBinding="compute" label="compute" placeholder="" type="text"}}
                        <span style="color: #639352;">/month/gb</span>
                     </tr>
                     <tr>
                        <span style="color: #639352;">Storage:</span>&nbsp;&nbsp;&nbsp;&nbsp;
                        {{input valueBinding="storage" label="storage" placeholder="" type="text"}}
                        <span style="color: #639352;">/month/gb</span>
                     </tr>
                  </li>
                  <li class="pad"><span>Storage Type:</span>
                     <input type="radio" name="plan" value="male"> SSD
                     <input type="radio" name="plan" value="female"> HDD
                     <input type="radio" name="plan" value="other"> BOTH
                  </li>
                  <li style="text-align: center;"><button class="button" {{action 'close'}}>Add</button></li>
               </ul>
               {{/simple-modal}}
               {{outlet}}
            </span>
            {{/if}}
         </div>
      </div>
   </div>
</div>
{{/meg-layout}}
